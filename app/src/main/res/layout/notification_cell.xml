<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="message"
            type="com.savitroday.savischools.api.response.Message"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/gradient_circle"

            android:src="@drawable/notification"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="67dp"
                    android:alpha=".20"
                    android:background="@color/warm_grey"
                    />

                <LinearLayout
                    android:id="@+id/deletiondetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/time_black"
                            />

                        <TextView
                            android:id="@+id/timeTextview"
                            style="@style/Regular10Navy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha=".54"
                            android:background="@color/white"
                            android:text="@{message.getCreatedOn()}"

                            tools:text="4:10 AM"
                            />

                    </LinearLayout>

                    <TextView
                        style="@style/Regular12PinkyRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="-5dp"
                        android:alpha=".75"
                        android:text="DELETE"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="16dp"
                    android:background="@color/black_14"
                    />

                <LinearLayout
                    android:id="@+id/notificationcell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/line"
                    android:layout_marginRight="80dp"
                    android:layout_toLeftOf="@id/seperator"
                    android:orientation="vertical"
                    >

                    <TextView
                        style="@style/Regular12Navy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{"From " + message.senderName}'
                        tools:text="From John"
                        android:alpha="0.54"
                        />

                    <TextView
                        style="@style/Medium16Navy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{message.title}"
                        tools:text="You are invited for 2017 F.."
                        />

                    <TextView
                        style="@style/Regular14Navy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".74"

                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{message.message}"
                        tools:text="We are Celebrating Upcoâ€¦"
                        />

                    <TextView
                        style="@style/Regular10White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/muted_blue_round_corner"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:id="@+id/student_name"
                     android:visibility="gone"
                        android:text="@{message.studentName}"
                        tools:text="JENNY"
                        />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>