<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="message"
            type="com.savitroday.savischools.api.response.MessageNotification"/>
       <import type="android.view.View"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_two"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="16dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/icon_notification"/>

            <ImageView android:id="@+id/camera_icon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignTop="@id/imageView"
                android:layout_marginLeft="-16dp"
                android:layout_toRightOf="@id/imageView"
                android:background="@drawable/neon_red_circle"
                android:src="@drawable/camera"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/timeTextview"
                style="@style/Regular10Navy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:alpha="0.54"
                android:minWidth="44dp"
                android:text="@{message.getCreatedOn()}"
                tools:text="23 Weeks"
                />

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/timeTextview"
                android:src="@drawable/time_black"
                />

            <View
                android:id="@+id/seperator"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/time_icon"
                android:background="@color/white_three"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@id/seperator"
                android:layout_toRightOf="@id/imageView"
                android:orientation="vertical">

                <TextView
                    style="@style/Regular12Navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.54"
                    android:text='@{"From " + message.senderName}'
                    tools:text="From John"
                    />

                <TextView
                    style="@style/Medium16Navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{message.title}"
                    tools:text="You are invited for 2017 F.."
                    />

                <TextView
                    style="@style/Regular14Navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.74"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{message.message}"
                    tools:text="We are Celebrating Upcoâ€¦"
                    />

                <TextView
                    style="@style/Regular10White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:alpha="0.80"
                    android:id="@+id/studenname"
                    android:background="@drawable/muted_blue_rounded_background"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:visibility="@{message.studentName!=null ? View.VISIBLE : View.GONE}"
                    android:text="@{message.studentName}"
                    tools:text="JENNY"
                    />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bottomLayout"
            android:background="@color/warm_grey"
            android:alpha="0.24"/>
    </RelativeLayout>
</layout>