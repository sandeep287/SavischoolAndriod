<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.savitroday.savischools.fragment.DashboardFragment">

    <data>

        <variable
            name="dashboard"
            type="com.savitroday.savischools.api.response.Dashboard"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:background="@color/twilight_blue_two"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <ImageButton
                android:id="@+id/Formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/bottom_icon_user"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/white"
                />

            <ImageButton
                android:id="@+id/Solve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/bottom_icon_catrgory"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/white"
                />

            <ImageButton
                android:id="@+id/Clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/bottom_icon_activites"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_tab">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_two"
                >

                <LinearLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gradient_background"
                    android:gravity="center_horizontal"
                    android:elevation="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="19dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/profile_img"/>

                    <TextView
                        style="@style/Bold16White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="@{dashboard.getStudentName()}"
                        tools:text="Hi Jenny, Good Morning"
                        />

                    <TextView
                        style="@style/Light12White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@{dashboard.getCurrentDate()}"
                        tools:text="Today, 14 Aug 2017"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/middle_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginRight="37dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/white_rounded_background"
                    android:elevation="8dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/stroke_3"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/image"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/checkin_label"
                            style="@style/Light12BlueGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check In"
                            />

                        <TextView
                            style="@style/Medium14Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{dashboard.getCheckInTime()}"
                            tools:text="9:00 AM"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/image"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Light12BlueGrey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check OUT"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@{dashboard.getCheckOutTime()}"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            tools:text="NOT YET"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <ListView
                    android:id="@+id/notification_listview"
                    android:layout_width="match_parent"
                    android:layout_height="293dp"
                    android:layout_below="@id/middle_layout"
                    android:layout_margin="16dp"/>

                <ListView
                    android:id="@+id/invoice_listview"
                    android:layout_width="match_parent"
                    android:layout_height="293dp"
                    android:layout_below="@id/notification_listview"
                    android:layout_margin="16dp"/>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone">

            <android.support.v4.widget.ContentLoadingProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:visibility="visible"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>