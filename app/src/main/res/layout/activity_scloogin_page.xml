<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/loginrelative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background"
                tools:context="com.savitroday.savischools.view.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/daycaretital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/day_care"
            android:gravity="center"/>

        <TextView
            android:id="@+id/signinital"
            style="@style/Light14White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/daycaretital"
            android:layout_marginBottom="87dp"
            android:gravity="center"
            android:text="Sign in to the school"
            />

        <LinearLayout

            android:id="@+id/signindetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signinital"
            android:layout_marginLeft="32dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/id_icon"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="36dp"
                    android:background="@drawable/setbordercolor"
                    android:textColorHint="@color/white_55"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Id"
                        style="@style/Regular16White"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginBottom="24dp"
                        android:hint="School ID"
                        android:inputType="number|textNoSuggestions"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/username"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="36dp"
                    android:background="@drawable/setbordercolor"
                    android:textColorHint="@color/white_55"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/uname"
                        style="@style/Regular16White"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginBottom="24dp"
                        android:hint="Username"
                        android:inputType="textEmailAddress|textNoSuggestions"
                        android:maxLines="1"
                        android:textColorHint="@color/white"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/password"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="36dp"
                    android:background="@drawable/setbordercolor"
                    android:textColorHint="@color/white_55"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pass"
                        style="@style/Regular16White"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginBottom="24dp"
                        android:hint="Password"
                        android:inputType="textPassword|textNoSuggestions"
                        android:maxLines="1"
                        />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/loginbtn"
            style="@style/Medium14Navy"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/signindetail"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="48dp"
            android:background="@color/turquoise"
            android:gravity="center"
            android:text="Login"
            />

        <TextView
            style="@style/Regular12White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="57dp"
            android:alpha=".54"
            android:text="Forgot Password?"
            android:onClick="onForgotPassword()"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <android.support.v4.widget.ContentLoadingProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

    </RelativeLayout>
</RelativeLayout>


