<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <variable
            name="invoice"
            type="com.savitroday.savischools.api.response.Invoice"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_two"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <RelativeLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:background="@drawable/white_61_rounded_background"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/Bold10NavyTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.80"
                    android:text="@{invoice.getMonth()}"
                    android:textAllCaps="true"
                    tools:text="May"
                    />

                <TextView
                    style="@style/Bold16NavyTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:letterSpacing="0.03"
                    android:text="@{invoice.getDate()}"
                    tools:text="21"
                    />

                <TextView
                    style="@style/Regular10NavyTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:alpha="0.50"
                    android:gravity="center_horizontal"
                    android:text="@{invoice.getYear()}"
                    tools:text="2017"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/date"
                android:orientation="vertical">

                <TextView
                    style="@style/Medium16Navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{invoice.invoiceType}"
                    tools:text="Invoice 1020"
                    />

                <TextView
                    style="@style/Regular14Navy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.74"
                    android:text="@{invoice.remarks}"
                    tools:text="This month Fee pendingâ€¦"
                    />

                <TextView
                    style="@style/Regular10PinkyRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{invoice.status}"
                    tools:text="Pending"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    style="@style/Bold16TwilightBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text='@{invoice.currency +" "+ invoice.amount}'
                    tools:text="$200"
                    />

                <TextView
                    android:id="@+id/paynowButton"
                    style="@style/Medium12White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/turqoise_rounded_background"
                    android:paddingBottom="6dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="6dp"
                    android:text="Pay Now"
                    />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bottomLayout"
            android:alpha="0.24"
            android:background="@color/warm_grey"/>
    </RelativeLayout>
</layout>